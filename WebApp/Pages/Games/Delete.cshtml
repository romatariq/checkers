@page
@model WebApp.Pages_Games.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this game?</h3>
<div>
    <h4>@Model.Game.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Started at
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.StartedAt)
        </dd>
        <dt class="col-sm-2">
            Player 1 name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Player1Name)
        </dd>
        <dt class="col-sm-2">
            Player 1 type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Player1Type)
        </dd>
        <dt class="col-sm-2">
            Player 2 name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Player2Name)
        </dd>
        <dt class="col-sm-2">
            Player 2 type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Player2Type)
        </dd>
        <dt class="col-sm-2">
            Game setting
        </dt>
        <dd class="col-sm-10">
            <a asp-page="/GameSettings/Details" asp-route-id="@Model.Game.GameSetting!.Id" target="_blank">
                @Html.DisplayFor(model => model.Game.GameSetting!.Name)
            </a>
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Game.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
