@page
@model WebApp.Pages_GameSettings.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this game setting?</h3>
<div>
    <h4>@Model.GameSetting.Name</h4>
    <hr />
        <dl class="row">
            <dt class="col-sm-3">
                Board width
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.GameSetting.BoardWidth)
            </dd>
            <dt class="col-sm-3">
                Board height
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.GameSetting.BoardHeight)
            </dd>
            <dt class="col-sm-3">
                Have to capture if possible
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.GameSetting.HasToCapture)
            </dd>
            <dt class="col-sm-3">
                Can capture backwards
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.GameSetting.CanEatBackwards)
            </dd>
            <dt class="col-sm-3">
                White starts
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.GameSetting.WhiteStarts)
            </dd>
            <dt class="col-sm-3">
                King step length is regular
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.GameSetting.KingCanMoveOnlyOneStep)
            </dd>
            <dt class="col-sm-3">
                All buttons can capture king
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.GameSetting.AllButtonCanEatKing)
            </dd>
        </dl>
    
    <form method="post">
        <input type="hidden" asp-for="GameSetting.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
